{
    "compilerOptions": {
        "target": "es2016",
        "lib": ["ESNext"],
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        },
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["src", "__tests__"],
    "exclude": ["node_modules"]
}
